{
  "name": "pagespeed-service",
  "version": "0.1.0",
  "description": "Google PageSpeed Insights service wrapper",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "browser": "dist/client.js",
  "scripts": {
    "build": "tsc && npm run build:client",
    "build:watch": "concurrently \"tsc --watch\" \"npm run build:client:watch\"",
    "build:client": "esbuild src/client.ts --bundle --minify --format=iife --outfile=dist/client.js",
    "build:client:watch": "esbuild src/client.ts --bundle --watch --format=iife --outfile=dist/client.js",
    "test": "jest",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "serve": "http-server -c-1 -p 3000 --push-state",
    "dev": "concurrently \"npm run build:watch\" \"npm run serve\""
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^8.0.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "http-server": "^14.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "pagespeed",
    "lighthouse",
    "performance"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}